{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/patternsadmin.css"> {% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-12">
                <h1 class="title">Liste des catégories actuelles</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a href="/categoryadmin/addCategories" class="add btn btn-dark">Ajouter une catégorie</a>
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Images</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>
                                <img class="imagePattern" src="/uploads/category/{{ category.image }}" alt="{{ category.name }}"
                                     title="{{ category.name }}">
                            </td>
                            <td>
                                {% if category.id in disabledCategories %}
                                    <button class="btn btn-lg btn-danger ml-3" disabled>Supprimer</button>
                                {% else %}
                                    <form action='/product/delete/' method="POST" class="btn btn-lg">
                                        <button class="btn btn-lg btn-danger">Supprimer</button>
                                        <input type="hidden" name="id" value="{{ product.id }}">
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href='/admin/index' class="delete btn btn-dark" role="button">Retour page administration</a>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}{% endblock %}