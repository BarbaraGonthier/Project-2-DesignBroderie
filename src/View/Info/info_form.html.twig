{% extends 'layout.html.twig' %}
{% block stylesheet %} <link rel="stylesheet" href="/assets/css/infoform.css"> {% endblock %}
{% block title %}{{ parent() }} | Demande de renseignements{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-12">
                <h1> Demande de renseignements </h1>
            </div>
        </div>
        <div class="row">
            {% for error in errors %}
                <div class="col-md-8 offset-md-2">
                    {{ error }}
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-8 offset-md-2">
                <h2>Vos informations</h2>
                <form action="" method="post">
                    <div class="form-group">
                        <label for="firstname"> Prénom : </label>
                        <input type="text" name="firstname" id="firstname" placeholder="Prénom" value="{{ info.firstname }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="lastname"> Nom : </label>
                        <input type="text" name="lastname" id="lastname" placeholder="Nom" value="{{ info.lastname }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="email"> Adresse email : </label>
                        <input type="email" name="email" id="email" placeholder="Adresse email" value="{{ info.email }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="message"> Message : </label>
                        <input type="text" name="message" id="message" placeholder="Votre message" value="{{ info.message }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
