{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/product.css">
{% endblock %}

{% block title %}Catalogue de vêtements{% endblock %}
{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-12">
                <div class="title">
                    <h1>Nos choix</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            {% for product in products %}
                <div class="col-md-2 mb-4">
                    <div class="card text-dark text-center h-100">
                        <img src="/uploads/products/{{ product.image }}" class="card-img-top" alt="image de {{ product.name }}">
                        <div class="card-body">
                            <div title="Categorie {{ product.name }}">
                                <p class="text-dark"><strong>{{ product.name }} </strong> Réf : {{ product.reference }}</p>
                                <p class="text-dark">Prix : {{ product.price }} €</p>
                                <p class="text-dark">Description : {{ product.description }} </p>
                            </div>
                        </div>
                        <a class="btn btn-dark" href="/Order/sendOrder/{{ product.id }}">
                            Commander
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="link-provider mt-5">
            <p class="text-dark">
                Pour plus de choix de vêtements, visitez le site de notre fournisseur <strong>TEXTILE EUROPE</strong>
            </p>
            <a class="btn btn-dark" href="https://www.textileeurope.com/new-2020" target="_blank">
                Juste ici !
            </a>
        </div>
    </div>
{% endblock %}