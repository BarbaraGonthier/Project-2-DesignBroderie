{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/product.css">
{% endblock %}

{% block title %}Catalogue de vêtements{% endblock %}


{% block content %}
    <div class="container">
        <div>
            <div class="title">
                <h1>Nos choix</h1>
            </div>
        </div>
            <div class="filter-gender">
                <div class="gender">Genre :</div>
                {% for gender in genders %}
                <div>
                    <a class="btn btn-dark" href="/product/list/{{ categoryId }}/{{ gender }}" role="button">{{ gender }}</a>
                </div>
                {% endfor %}
            </div>
            <div class="reload">
                <a href="/product/list/{{ categoryId }}">réinitialiser</a>
            </div>

        <div class="row">
            {% for product in products %}
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card text-dark">
                        <img src="/uploads/products/{{ product.image }}" class="card-img-top"
                             alt="image de {{ product.name }}">
                        <div class="card-body">
                            <div title="Categorie {{ product.name }}">
                                <p class="text-dark"><strong>{{ product.name }} </strong> Réf : {{ product.reference }}
                                </p>
                                <p class="text-dark">Prix : {{ product.price }} €</p>
                                <p class="text-dark">Description : {{ product.description }} </p>
                            </div>
                        </div>
                        <a class="btn btn-dark" href="/Order/sendOrder/{{ product.id }}">
                            Commander
                        </a>
                    </div>
                </div>
            {% else %}
                <h2>Aucun produit à afficher</h2>
            {% endfor %}
        </div>
        <div class="link-provider">
            <p class="text-dark">
                Pour plus de choix de vêtements, visitez le site de notre fournisseur <strong>TEXTILE EUROPE</strong>
            </p>
            <a class="btn btn-dark" href="https://www.textileeurope.com/new-2020">
                Juste ici !
            </a>
        </div>
    </div>
{% endblock %}