{% extends 'layout.html.twig' %}
{% block stylesheet %} <link rel="stylesheet" href="/assets/css/form.css"> {% endblock %}
{% block title %}{{ parent() }} | Demande de devis{% endblock %}


{% block header %}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-12">
                <h1 class="form-title"> Commande </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h2 class="form-subtitle" >Vos Coordonnees</h2>
                <form action="" method="post">
                    <div class="form-group">
                    <label for="lastname"> Nom : *</label>
                    <input type="text" name="lastname" id="lastname" placeholder="Nom" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="firstname"> Prénom : *</label>
                    <input type="text" name="firstname" id="firstname" placeholder="Prénom" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="email"> Adresse email : *</label>
                    <input type="email" name="email" id="email" placeholder="Adresse email" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="phone"> Téléphone</label>
                    <input type="tel" name="phone" id="phone" placeholder="Téléphone" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="companyName"> Raison sociale : </label>
                    <input type="text" name="companyName" id="companyName" placeholder="Entreprise/Association" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="address"> Adresse (numéro et voie) : * </label>
                    <input type="text" name="address" id="address" placeholder="Numéro et voie" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="postcode"> Code postal : * </label>
                    <input type="text" name="postcode" id="postcode" placeholder="Code postal" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="city"> Ville : * </label>
                    <input type="text" name="city" id="city" placeholder="Ville" class="form-control">
                    </div>

                <h2 class="form-subtitle "> Votre produit</h2>
                    <div class="form-group">
                    <label for="category"> Catégorie de produit : *</label>
                    <select name="category" id="category" class="form-control">
                        <option value="">--Choisissez une catégorie--</option>
                        <option value=""></option>
                    </select>
                    </div>
                    <div class="form-group">
                    <label for="gender"> Type de modèle (homme/femme/unisexe) : *</label>
                    <select name="gender" id="gender" class="form-control">
                        <option value="">--Choisissez un type--</option>
                        <option value=""></option>
                    </select>
                    </div>
                    <div class="form-group">
                    <label for="product"> Référence du modèle : *</label>
                    <select name="product" id="product" class="form-control">
                        <option value="">--Choisissez un modèle--</option>
                        <option value=""></option>
                    </select>
                    </div>
                    <div class="form-group">
                    <label for="color"> Couleur : *</label>
                    <select name="color" id="color" class="form-control">
                        <option value="white"> Blanc </option>
                        <option value="color"> Couleur </option>
                    </select>
                    </div>
                    <div class="form-group">
                    <label for="quantity"> Quantité : *</label>
                    <select name="quantity" id="quantity" class="form-control">
                        <option value="">--Choisissez la quantité--</option>
                        <option value=""></option>
                    </select>
                    </div>
                    <div class="form-group">
                    <label for="message">Votre Message</label>
                    <textarea name="message" id="message" placeholder="Votre message" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                    <label for="userLogo">Votre logo à imprimer :</label>
                    <input type="file" id="userLogo" name="userLogo" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="logo"> Ou sélectionnez en un parmi nos choix : </label>
                    <select name="logo" id="logo" class="form-control-file">
                        <option value="">--Choisissez votre logo--</option>
                        <option value=""></option>
                    </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Envoyer</button>
                    </div>
                    <p> * ces champs sont obligatoires </p>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}