{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/addproduct.css">
{% endblock %}

{% block content %}


    <ul class="mt-3 alert alert-danger">
        {%- for error in errors -%}
            <li>{{ error }}</li>
        {%- endfor -%}
    </ul>
    <h1>Ajout d'un nouveau produit</h1>

    <form action="" method="POST">


        <div class="form-group">

            <label for="product-category">Catégorie de produit</label>
            <select name="category" id="category">
                {% for category in categories %}
                    <option {{ product.category == category.id ? 'selected' }}
                            value="{{ category.id }}">{{ category.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="product-name"> Nom du modèle : </label>
            <input type="text" name="name" id="product-name" class="form-control" value="{{ product.name }}">
        </div>


        <div class="form-group">
            <label for="gender"> Genre : </label>
            <select name="gender" id="gender" class="form-control">
                <option value="">--Faites votre choix--</option>
                <option value="Femme">Femme</option>
                <option value="Homme">Homme</option>
                <option value="Mixte">Mixte</option>
            </select>
        </div>

        <div class="form-group">
            <label for="reference"> Référence : </label>
            <input type="text" name="reference" id="product-reference" class="form-control"
                   value="{{ product.reference }}">
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="file" id="image" name="image" class="form-control-file">
        </div>
        <div class="form-group">
            <label for="description">Description du produit:</label>
            <textarea id="description" name="description" class="form-control-file" rows="5" cols="33">
            {{ product.description }}
        </textarea>
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input placeholder="http://monimage.com" class="form-control" type="url" min="0" id="image" name="image"
                   value="{{ product.image }}">
        </div>
        <div class="form-group">
            <label for="price">Prix </label>
            <input class="form-control" type="number" step="0.01" min="0" id="price" name="price"
                   value="{{ product.price }}">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-dark">Ajouter</button>
        </div>
    </form>
{% endblock %}
