{% extends 'layout.html.twig' %}
{% block stylesheet %} <link rel="stylesheet" href="/assets/css/form.css"> {% endblock %}
{% block title %}{{ parent() }} | Détail du Produit{% endblock %}



{% block content %}


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1 col-12">
    <h1>Détail du produit {{ product.name }}</h1>




<div class="card-group mb-5">
    <div class="card">
        <div class="card-header">{{product.category}}</div>
        <div class="card-body">
            <h2 class="card-title">{{product.name}}</h2>
            <img class="card-image" src="/assets/images/{{ product.image }}" alt="{{ product.name }}"/>
                <p class="card-text">{{product.gender}}</p>
                <p class="card-text"><small class="text-muted">{{ product.description}}</small></p>
        </div>
        <div class="card-footer">{{ product.price }} €</div>
    </div>
</div>

            <a href='/product/edit/{{ product.id }}' class="btn btn-secondary btn-lg" role="button">Modifier</a>

            <form action='/product/delete/' method="POST">
                <button class="btn btn-secondary btn-lg">Supprimer</button>
                <input type="hidden" name="id" value="{{ product.id }}">
            </form>

            <a href='/product/index/' class="btn btn-secondary btn-lg" role="button">Retour</a>

        </div>
    </div>
</div>
{% endblock %}

        {% block footer %}

        {% endblock %}
