{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/productadmin.css"> {% endblock %}

{% block title %}{{ parent() }} Index produit | Administrateur{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-12">
                <h1 class="title">
                    Liste des produits disponibles
                </h1>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a href="/product/add" class="add btn btn-dark" role="button">Ajouter un produit</a>
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th class="col-2" scope="col">Nom</th>
                        <th class="col-2" scope="col">Référence</th>
                        <th class="col-2" scope="col">Prix</th>
                        <th class="col-2" scope="col">Photo</th>
                        <th class="col-4" scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr class="d-flex">
                            <td class="col-2">{{ product.name }}</td>
                            <td class="col-2">{{ product.reference }}</td>
                            <td class="col-2">{{ product.price }}</td>
                            <td class="col-2"><img class="img-thumbnail little" src="/uploads/products/{{ product.image }}" alt="{{ product.name }}"/></td>
                            <td class="col-4">
                                <a href="/product/show/{{ product.id }}" class="btn btn-secondary btn-lg" role="button">Détails</a>
                                <a href="/product/edit/{{ product.id }}" class="btn btn-secondary btn-lg" role="button">Modifier</a>
                                <form action='/product/delete/' method="POST" class="btn btn-lg">
                                    <button class="btn btn-danger btn-lg">Supprimer</button>
                                    <input type="hidden" name="id" value="{{ product.id }}">
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href='/admin/index' class="delete btn btn-dark" role="button">Retour page administration</a>
            </div>
        </div>

    </div>
{% endblock %}
{% block footer %}{% endblock %}


