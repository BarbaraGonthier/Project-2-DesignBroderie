 {% if not errors is empty %}
    <div class="row ">
        {% for error in errors %}
            <div class="col-md-8 offset-md-2 alert alert-danger">
                {{ error }}
            </div>
        {% endfor %}
    </div>
{% endif %}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form action="" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{ order.id }}" name="id">
            <div class="form-group">
                <label for="status"> Etat de la commande : </label>
                <input type="text" name="status" id="status" value="{{ order.status }}" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary btn-lg">Modifier</button>
            </div>
        </form>
    </div>
</div>
