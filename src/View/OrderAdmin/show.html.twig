{% extends 'layout.html.twig' %}
{% block stylesheet %} <link rel="stylesheet" href="/assets/css/order-admin.css"> {% endblock %}
{% block title %}{{ parent() }} | Détail de la commande{% endblock %}



{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-12">
                <h1 class="titre">
                    Détail de la commande {{ order.id }}
                </h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-hover">
                    <tbody>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Etat de la commande</th>
                            <td>{{ order.status }}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Client</th>
                            <td>{{ order.firstname }} {{ order.lastname }}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Société</th>
                            <td>{{ order.company_name }}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Adresse postale</th>
                            <td>{{ order.address }} {{ order.postcode }} {{ order.city }}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Email</th>
                            <td>{{ order.email}}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Téléphone</th>
                            <td>{{ order.phone}}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Produit</th>
                            <td>{{ order.product_name}}, ref : {{ order.product_reference }}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Taille</th>
                            <td>{{ order.size}}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Quantité</th>
                            <td>{{ order.quantity}}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Logo</th>
                            <td>{{ order.user_logo}}</td>
                        </tr>
                        <tr>
                            <th class="text-white bg-dark w-25" scope="row">Message</th>
                            <td>{{ order.message}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <a href='/order/edit/{{ order.id }}' class="btn btn-secondary btn-lg" role="button">Modifier</a>
        <a href='/order/index/' class="btn btn-secondary btn-lg" role="button">Retour</a>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}
