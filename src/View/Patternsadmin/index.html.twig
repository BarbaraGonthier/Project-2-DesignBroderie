{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/patternsadmin.css"> {% endblock %}
{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-12">
                <h1 class="title">Liste des modèles disponibles </h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a href="/pattern/addPattern" class="add btn btn-dark">Ajouter un modèle</a>
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Images</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for pattern in patterns %}
                        <tr>
                            <td>{{ pattern.name }}</td>
                            <td>
                                <img class="imagePattern" src="/uploads/patterns/{{ pattern.photo }}" alt="{{ pattern.name }}"
                                     title="{{ pattern.name }}">
                            </td>
                            <td>
                                <form action='/pattern/delete/' method="POST" class="btn btn-lg">
                                    <button class="btn btn-danger btn-lg">Supprimer</button>
                                    <input type="hidden" name="id" value="{{ pattern.id }}">
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href='/admin/index' class="delete btn btn-dark" role="button">Retour page administration</a>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}{% endblock %}